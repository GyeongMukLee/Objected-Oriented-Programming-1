{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Java 컴파일",
            "group": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-classpath",
                "${fileDirname}",
                "-encoding",
                "UTF-8",
                "${file}"
            ],
        },
        {
            "label": "Java 실행",
            "group": "test",
            "type": "shell",
            "command": "java",
            "args": [
                "-classpath",
                "${fileDirname}",
                "${fileDirname}\\${fileBasenameNoExtension}.class"
            ]
        }
    ]
}